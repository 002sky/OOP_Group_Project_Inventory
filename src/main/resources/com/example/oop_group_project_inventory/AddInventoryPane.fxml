<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_group_project_inventory.AddInventoryPane"
      alignment="CENTER" spacing="20.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Pane>
        <children>
            <Label styleClass="h3" text="Add Inventory"/>
            <HBox alignment="CENTER" spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="40.0"/>
                </padding>

                <GridPane alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Inventory ID :"/>
                        <Label text="Inventory Name :" GridPane.rowIndex="1"/>
                        <Label text="Address :" GridPane.rowIndex="2"/>
                        <Label text="Freezer Available :" GridPane.rowIndex="3"/>

                        <TextField fx:id="TfInventoryID" GridPane.columnIndex="1"/>
                        <Label fx:id="lblinventoryIDErrMsg" GridPane.columnIndex="2"/>

                        <TextField fx:id="TfInventoryName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label fx:id="lblinventoryNameErrMsg" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                        <TextArea fx:id="TaInventoryAddress" prefHeight="200.0" prefWidth="200.0"
                                  GridPane.columnIndex="1"
                                  GridPane.rowIndex="2"/>
                        <Label fx:id="lblinventoryAddressErrMsg" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                        <CheckBox fx:id="CbFreezerAvailable" mnemonicParsing="false" text="Available"
                                  GridPane.columnIndex="1"
                                  GridPane.rowIndex="3"/>
                        <Button mnemonicParsing="false" text="Submit" GridPane.columnIndex="1" GridPane.rowIndex="4"
                                fx:id="BtnSubmit" onMouseClicked="#AddInventory"/>
                    </children>
                </GridPane>
            </HBox>

        </children>
    </Pane>
</VBox>
