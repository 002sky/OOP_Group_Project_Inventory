<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_group_project_inventory.AddOrderPane">
    <children>
        <BorderPane>
            <top>
                <BorderPane BorderPane.alignment="CENTER">
                    <center>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Order ID: " />
                                <TextField fx:id="TfOrderID" prefHeight="25.0" prefWidth="164.0" GridPane.columnIndex="1" />
                                <Label fx:id="lblOrderIDErrMsg" GridPane.columnIndex="2" />

                                <Label text="Product ID: " GridPane.rowIndex="2" />
                                <TextField fx:id="TfProductID" prefHeight="25.0" prefWidth="93.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label fx:id="lblProductIDErrMsg" GridPane.columnIndex="2" GridPane.rowIndex="2" />

                                <Label text="Product Name: " GridPane.rowIndex="3" />
                                <Label fx:id="lblProductName" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="Selling Price: " GridPane.rowIndex="4" />
                                <Label fx:id="lblSellingPrice" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                <Label text="Quantity: " GridPane.rowIndex="5" />
                                <TextField fx:id="TfQuantity" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                <Label fx:id="lblQuantityErrMsg" GridPane.columnIndex="2" GridPane.rowIndex="5" />

                                <Button mnemonicParsing="false" onMouseClicked="#addToTable" prefHeight="25.0" prefWidth="100.0" text="Add" GridPane.columnIndex="4" GridPane.rowIndex="2">
                                    <GridPane.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </GridPane.margin>
                                </Button>

                                <Label text="Date :" GridPane.rowIndex="1" />
                                <DatePicker fx:id="dpOrderDate" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label fx:id="lblDateErrMsg" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                <Button mnemonicParsing="false" onMouseClicked="#deleteItem" prefHeight="25.0" prefWidth="100.0" text="Delete" GridPane.columnIndex="4" GridPane.rowIndex="4">
                                    <GridPane.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </GridPane.margin>
                                </Button>
                                <Button mnemonicParsing="false" onMouseClicked="#submitToDatabase" prefHeight="25.0" prefWidth="100.0" text="Submit" GridPane.columnIndex="4" GridPane.rowIndex="5">
                                    <GridPane.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </GridPane.margin>
                                </Button>
                        <Button mnemonicParsing="false" onMouseClicked="#clearData" prefHeight="25.0" prefWidth="100.0" text="Clear" GridPane.columnIndex="4" GridPane.rowIndex="3">
                           <GridPane.margin>
                              <Insets left="5.0" right="5.0" />
                           </GridPane.margin>
                        </Button>
                            </children>
                        </GridPane>
                    </center>
                    <right>
                        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                    </right>
               <top>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Add order" BorderPane.alignment="TOP_LEFT">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Text>
               </top>
               <left>
                  <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </left>
                </BorderPane>
            </top>
            <center>
                <TableView fx:id="TvProduct" prefHeight="288.0" prefWidth="514.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="clmProductID" prefWidth="100.0" text="Product ID" />
                        <TableColumn fx:id="clmProductName" prefWidth="100.0" text="Product Name" />
                        <TableColumn fx:id="clmSellingPrice" prefWidth="100.0" text="Selling Price" />
                        <TableColumn fx:id="clmQuantity" prefWidth="100.0" text="Quantity" />
                        <TableColumn fx:id="clmTotal" prefWidth="100.0" text="Total" />
                    </columns>
                </TableView>
            </center>
            <bottom>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="SubTotal: RM " />
                        <Label fx:id="lblSubTotal" />
                    </children>
                </HBox>
            </bottom>
            <right>
                <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
            </right>
         <left>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </left>
        </BorderPane>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</HBox>
