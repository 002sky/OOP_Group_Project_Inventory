<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_group_project_inventory.AddPatchPane"
      alignment="CENTER" spacing="20.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Pane>

        <children>
            <Label styleClass="h3" text="Add Product Patch"/>
            <HBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="40.0"/>
            </padding>
            <GridPane alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <children>
                    <Label prefWidth="127.0" text="Patch Number :"/>
                    <Label text="Supply Source :" GridPane.rowIndex="1"/>
                    <Label text="Product :" GridPane.rowIndex="2"/>
                    <Label text="Inventory" GridPane.rowIndex="3"/>
                    <Label text="Received Date" GridPane.rowIndex="4"/>
                    <Label text="Quantity :" GridPane.rowIndex="5"/>

                    <TextField fx:id="TfPatchNumber" GridPane.columnIndex="1"/>
                    <Label fx:id="lblPatchNumberErrMsg" GridPane.columnIndex="2"/>

                    <TextField fx:id="TfSupplySource" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label fx:id="lblSupplySourceErrMsg" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                    <ComboBox fx:id="CbProductBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Label fx:id="lblProductBoxErrMsg" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                    <ComboBox fx:id="CbInventoryBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    <Label fx:id="lblInventoryBoxErrMsg" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

                    <DatePicker fx:id="DpReceivedDate" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    <Label fx:id="lblReceivedDateErrMsg" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

                    <TextField fx:id="TfQuantity" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    <Label fx:id="lblQuantityErrMsg" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

                    <Button onMouseClicked="#SavePatch" mnemonicParsing="false" prefHeight="25.0" prefWidth="89.0"
                            text="Save" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                </children>
            </GridPane>
            </HBox>
        </children>
    </Pane>
</VBox>
